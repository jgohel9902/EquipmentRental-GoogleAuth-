@model List<dynamic>
@{
    ViewData["Title"] = "Overdue Rentals";
}

<div class="container mt-5">
    <div class="dashboard-card">
        <h3 class="text-warning mb-3">⚠️ Overdue Rentals</h3>
        <a href="/Home/AdminDashboard" class="back-link mb-3 d-inline-block">⬅ Back</a>

        <table class="table table-bordered table-striped table-hover shadow-sm mt-3">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Equipment ID</th>
                    <th>Customer ID</th>
                    <th>Issued At</th>
                    <th>Due Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var rental in Model)
                    {
                        <tr>
                            <td>@rental.id</td>
                            <td>@rental.equipmentId</td>
                            <td>@rental.customerId</td>
                            <td>@Convert.ToDateTime(rental.issuedAt).ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-danger fw-semibold">@Convert.ToDateTime(rental.dueDate).ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No overdue rentals found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

