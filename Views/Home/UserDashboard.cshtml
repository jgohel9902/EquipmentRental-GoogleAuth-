@{
    ViewData["Title"] = "User Dashboard";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background-color:#f8f9fa;">
    <div class="card shadow-lg p-5" style="max-width: 900px; border-radius: 16px; width:100%;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-secondary mb-3">👤 User Dashboard</h2>
            <h5 class="text-dark mb-3">
                Welcome, <strong>@User.Identity?.Name</strong>!
                <span class="text-muted">(@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value)</span>
            </h5>
            <div class="mt-2">
                <a href="/Home/AdminDashboard" class="btn btn-outline-info btn-sm me-2">🔄 Switch to Admin View</a>
                <form method="post" action="/auth/logout" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm px-3">🚪 Logout</button>
                </form>
            </div>
        </div>

        <hr />

        <div class="row text-center mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm p-3 border-0" style="background-color:#e3f2fd; border-radius:12px;">
                    <h5 class="text-primary mb-2">🧰 Available Equipment</h5>
                    <h2 class="fw-bold text-dark">@ViewBag.AvailableCount</h2>
                    <a href="/Equipment/Index" class="btn btn-outline-primary btn-sm mt-2">Browse Equipment</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm p-3 border-0" style="background-color:#fff8e1; border-radius:12px;">
                    <h5 class="text-warning mb-2">📦 My Active Rentals</h5>
                    <h2 class="fw-bold text-dark">@ViewBag.ActiveRentalsCount</h2>
                    <a href="/Rentals/Active" class="btn btn-outline-warning btn-sm mt-2">View Active</a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm p-3 border-0" style="background-color:#e8f5e9; border-radius:12px;">
                    <h5 class="text-success mb-2">✅ Completed Rentals</h5>
                    <h2 class="fw-bold text-dark">@ViewBag.CompletedRentalsCount</h2>
                    <a href="/Rentals/Completed" class="btn btn-outline-success btn-sm mt-2">View Completed</a>
                </div>
            </div>
        </div>

        <hr />

        <div class="text-center">
            <h5 class="fw-bold text-secondary mb-3">🎯 Quick Actions</h5>
            <div class="d-flex flex-wrap justify-content-center gap-3">
                <a href="/Equipment/Index" class="btn btn-primary px-4">🔍 Browse Equipment</a>
                <a href="/Home/Secure" class="btn btn-outline-dark px-4">👤 View My Info</a>
            </div>
        </div>

        <hr />

        <div class="text-center mt-4">
            <a href="/Home/Index" class="btn btn-outline-dark px-4">🏠 Back to Home</a>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
