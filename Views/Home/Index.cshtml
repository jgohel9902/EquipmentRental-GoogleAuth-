@{
    ViewData["Title"] = "Equipment Rental Management System";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background-color:#f5f6fa;">
    <div class="card shadow-lg p-5" style="max-width: 600px; border-radius: 16px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary mb-2">🏗️ Equipment Rental Management System</h2>
            <h5 class="text-muted">Google OAuth Authentication Demo</h5>
        </div>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="text-center mb-4">
                <p class="fs-5 mb-1"><strong>Hello, @User.Identity?.Name!</strong></p>
                <p class="text-secondary mb-1">
                    <i class="bi bi-envelope"></i> @User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value
                </p>
                <p class="text-secondary">
                    <i class="bi bi-person-badge"></i> Role:
                    <span class="badge bg-success">@((User.IsInRole("Admin")) ? "Admin" : "User")</span>
                </p>
            </div>

            <div class="d-grid gap-3">
                <a href="/Home/Secure" class="btn btn-outline-primary btn-lg shadow-sm">
                    🔒 Secure Page (API /me)
                </a>
                <a href="/Home/AdminOnly" class="btn btn-outline-warning btn-lg shadow-sm">
                    👑 Admin Only (API /admin)
                </a>
                <a href="/Home/UserDashboard" class="btn btn-outline-info btn-lg shadow-sm">
                    👤 User Dashboard
                </a>
                <a href="/Home/AdminDashboard" class="btn btn-outline-dark btn-lg shadow-sm">
                    ⚙️ Admin Dashboard
                </a>
            </div>

            <form method="post" action="/auth/logout" class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4 py-2 shadow-sm">
                    🚪 Logout
                </button>
            </form>
        }
        else
        {
            <div class="text-center">
                <p class="fs-5 mb-3">Please sign in with your Google account to access the system.</p>
                <a href="/auth/login" class="btn btn-primary btn-lg px-5 py-3 shadow-sm">
                    🔐 Sign in with Google
                </a>
            </div>
        }
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
